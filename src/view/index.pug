extends layout.pug

block content
  .container
    .starter-template
      h1(
          id='h1-01'
          data-ng-model='myModel'
          class='my-h1'
      )= title
      h2(class=classes) Message: #{message}
      p.lead&attributes(atts)
        | Now you can start your own project with
        a(href='http://getbootstrap.com/', target='_blank') Bootstrap 4.3.1
        | . This plugin is a fork from
        a(href='https://github.com/le717/brackets-html-skeleton#readme') HTML Skeleton
        | .
      ul
        each user in users
          li #{user.id}: #{user.name} - #{user.email}
